  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Movie Buff</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="wrapper">
      <div class="header">
        <h1>Movie Buff</h1>

        <strong><a href="/">Home</a> &#8226; 
        <% if logged_in? %>
          <a href="/movies">My Movies</a> &#8226;
          <a href="/reviews">My Reviews</a> &#8226;
          <a href="/logout">Log out</a>
        <% else %>
          <a href="/login">Log in</a> &#8226; <a href="/signup">Sign up</a>
        <% end%></strong><br><br>

        <% flash_types.select{ |kind| flash.has?(kind) }.each do |kind| %>
          <center><div class="flash <%= kind %>" style="color: #fff; font-size: 20px; font-weight: bold; padding: 3px; text-align: center;">
            <%= flash[kind] %>
          </div></center>
        <% end %>
      </div><br>

      <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>Movie Buff</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

    <script type='text/javascript'> 
      title = "- Movie Buff, A Collection of Your Favorite Movies ";
      position = 0;
      function scrolltitle() {
        document.title = title.substring(position, title.length) + title.substring(0, position); 
        position++;
        if (position > title.length) position = 0;
        titleScroll = window.setTimeout(scrolltitle,170);
      }
    scrolltitle();
    </script>
