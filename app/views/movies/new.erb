<h3>Add a New Movie</h3>

<form action="/movies" method="POST">
    <p><label for="title">Title:</label>
    <input type="text" name="title" id="title" required></p>
    <p><label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" required></p>
    <p><label for="release_year">Year of Release:</label>
    <input type="number" min="1900" max="2020" name="release_year" id="release_year" required></p>
    <p><label for="director">Director:</label>
    <input type="text" name="director" id="director" required></p>
    <p><label for="description">Description:</label>
    <textarea name="description" id="title" required></textarea></p>
    <input type="submit" value="Save">
</form>

<form action="/movies" method="GET">
    <input type="submit" value="Cancel">
</form>